<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/assignment_date_bg"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingEnd="8dp"
        android:paddingLeft="6dp"
        android:paddingRight="8dp"
        android:paddingStart="6dp"
        android:paddingTop="3dp"
        android:text="12 Aug 16"
        android:textColor="#f6273a4e"
        android:textStyle="bold|italic" />

    <RelativeLayout
        android:id="@+id/view69"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_Date"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/notification_item_body_bg">

        <ImageView
            android:id="@+id/notifaction_tag_imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/notification_icon_bg"
            android:padding="10dp"
            android:src="@drawable/leave_notification_96" />

        <TextView
            android:id="@+id/txt_Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/notifaction_tag_imageView"
            android:layout_toRightOf="@+id/notifaction_tag_imageView"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Alert for Attendance"
            android:textColor="#565656"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_Body"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/txt_Body"
            android:layout_below="@+id/txt_Body"
            android:paddingBottom="2dp"
            android:paddingEnd="2dp"
            android:paddingRight="2dp"
            android:text="12 Aug 16" />

        <TextView
            android:id="@+id/txt_Submited_By_or_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/notifaction_tag_imageView"
            android:layout_toRightOf="@+id/notifaction_tag_imageView"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Kapil Mohitkar"
            android:textStyle="italic" />
    </RelativeLayout>

</RelativeLayout>