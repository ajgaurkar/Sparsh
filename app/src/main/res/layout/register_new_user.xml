<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"

    android:weightSum="1">

    <View
        android:id="@+id/view56"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!--<ProgressBar-->
    <!--android:id="@+id/registerProgressBar"-->
    <!--style="?android:attr/progressBarStyleSmall"-->
    <!--android:layout_width="35dp"-->
    <!--android:layout_height="35dp"-->
    <!--android:layout_gravity="right"-->
    <!--android:layout_marginRight="2dp"-->
    <!--android:layout_marginTop="1dp"-->
    <!--android:visibility="invisible" />-->

    <TextView
        android:id="@+id/textView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/view56"
        android:text="First Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/firsteditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/user_profile_fields_bg"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/postedOnTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lasteditText"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/firsteditText"
        android:layout_toLeftOf="@+id/view56"
        android:layout_toStartOf="@+id/view56"
        android:text="Last Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/lasteditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/firsteditText"
        android:layout_alignLeft="@+id/firsteditText"
        android:layout_alignRight="@+id/firsteditText"
        android:layout_alignStart="@+id/firsteditText"
        android:layout_below="@+id/postedOnTextView"
        android:background="@drawable/user_profile_fields_bg"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/postedOnTextView"
        android:layout_alignStart="@+id/postedOnTextView"
        android:layout_below="@+id/lasteditText"
        android:layout_toLeftOf="@+id/view56"
        android:layout_toStartOf="@+id/view56"
        android:text="Email_ID"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/emaileditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/lasteditText"
        android:layout_alignLeft="@+id/firsteditText"
        android:layout_alignRight="@+id/lasteditText"
        android:layout_alignStart="@+id/firsteditText"
        android:layout_below="@+id/textView3"
        android:background="@drawable/user_profile_fields_bg"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/emaileditText"
        android:layout_toLeftOf="@+id/view56"
        android:text="Password"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/passwordeditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/emaileditText"
        android:layout_alignLeft="@+id/emaileditText"
        android:layout_alignRight="@+id/emaileditText"
        android:layout_alignStart="@+id/emaileditText"
        android:layout_below="@+id/textView4"
        android:background="@drawable/user_profile_fields_bg"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="5dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/view56"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignRight="@+id/view56"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/passwordeditText"
        android:text="Confim password"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/confirmpasseditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/passwordeditText"
        android:layout_alignLeft="@+id/passwordeditText"
        android:layout_alignRight="@+id/passwordeditText"
        android:layout_alignStart="@+id/passwordeditText"
        android:layout_below="@+id/textView5"
        android:background="@drawable/user_profile_fields_bg"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="5dp"
        android:singleLine="true" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/confirmpasseditText"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignRight="@+id/confirmpasseditText"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/confirmpasseditText"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Register as"
            android:textColor="#000"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/studentRadioButton"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Student" />

        <RadioButton
            android:id="@+id/teacherRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teacher" />
    </RadioGroup>

    <Button
        android:id="@+id/signupbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/radioGroup"
        android:layout_alignLeft="@+id/confirmpasseditText"
        android:layout_alignRight="@+id/radioGroup"
        android:layout_alignStart="@+id/confirmpasseditText"
        android:layout_alignTop="@+id/radioGroup"
        android:layout_marginTop="41dp"
        android:background="@color/colorPrimary"
        android:onClick="SignUp"
        android:text="SignUp"
        android:textColor="#fff"
        android:textStyle="bold" />


</RelativeLayout>