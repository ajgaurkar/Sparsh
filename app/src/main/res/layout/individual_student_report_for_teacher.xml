    android:weightSum="1">

    <!--student switch has to be added on action bar-->

    <RelativeLayout
        android:id="@+id/student_report_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/select_exam_button"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/reports_textview_color_bg_left"
            android:gravity="center"
            android:text="Exam"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/reportselect_spinner"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view27"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/select_subject_button"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/user_profile_fields_bg"
            android:paddingEnd="5dp"
            android:paddingRight="5dp" />

        <ImageView
            android:id="@+id/student_arrow_down_float"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/reportselect_spinner"
            android:layout_alignEnd="@+id/reportselect_spinner"
            android:layout_alignRight="@+id/reportselect_spinner"
            android:layout_alignTop="@+id/reportselect_spinner"
            android:paddingEnd="3dp"
            android:src="@android:drawable/arrow_down_float" />


        <View
            android:id="@+id/view27"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/select_exam_button"
            android:layout_marginTop="10dp"
            android:background="#84323232" />

        <TextView
            android:id="@+id/reportHeadingTextView1"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view27"
            android:gravity="center"
            android:text="Exam "
            android:textColor="#aa000000" />

        <View
            android:id="@+id/view28"
            android:layout_width="1dp"
            android:layout_height="29dp"
            android:layout_alignTop="@+id/reportHeadingTextView1"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/reportHeadingTextView1"
            android:background="#84323232"
            android:paddingTop="5dp">

        </View>

        <TextView
            android:id="@+id/reportHeadingTextView2"
            android:layout_width="106dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/reportHeadingTextView1"
            android:layout_toEndOf="@+id/view28"
            android:gravity="center"
            android:text="Marks"
            android:textColor="#aa000000" />

        <View
            android:id="@+id/view29"
            android:layout_width="1dp"
            android:layout_height="29dp"
            android:layout_alignTop="@+id/reportHeadingTextView2"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/reportHeadingTextView2"
            android:background="#84323232" />

        <TextView
            android:id="@+id/reportHeadingTextView3"
            android:layout_width="104dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/reportHeadingTextView2"
            android:layout_toEndOf="@+id/view29"
            android:gravity="center"
            android:text="Grades"
