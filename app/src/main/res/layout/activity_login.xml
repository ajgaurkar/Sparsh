<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rewards_panel_bg"
    android:orientation="vertical"
    android:padding="10dip">

    <View
        android:id="@+id/rootview"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/view57"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true" />

    <View
        android:id="@+id/view58"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="120dp"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/view58"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sparsh_logo" />


    <EditText
        android:id="@+id/editText15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view57"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText15"
        android:layout_alignLeft="@+id/editText15"
        android:layout_alignStart="@+id/editText15"
        android:layout_alignTop="@+id/editText15"
        android:background="#E84C3D"
        android:padding="2dp"
        android:src="@drawable/loginuser100" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view57"
        android:layout_alignEnd="@+id/editText15"
        android:layout_alignRight="@+id/editText15"
        android:layout_alignTop="@+id/imageView22"
        android:layout_toEndOf="@+id/imageView22"
        android:layout_toRightOf="@+id/imageView22"
        android:background="#fff"
        android:hint="User name"
        android:singleLine="true"
        android:maxLines="1"
        android:paddingEnd="5dp"
        android:paddingStart="5dp" />

    <EditText
        android:id="@+id/editText17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText15"
        android:layout_alignLeft="@+id/editText15"
        android:layout_alignRight="@+id/editText15"
        android:layout_alignStart="@+id/editText15"
        android:layout_below="@+id/editText15"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="20dp" />


    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText17"
        android:layout_alignLeft="@+id/editText17"
        android:layout_alignStart="@+id/editText17"
        android:layout_alignTop="@+id/editText17"
        android:layout_toLeftOf="@+id/passwordEditText"
        android:layout_toStartOf="@+id/passwordEditText"
        android:background="#E84C3D"
        android:padding="5dp"
        android:src="@drawable/loginkey100" />


    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_alignBottom="@+id/editText17"
        android:layout_alignEnd="@+id/editText17"
        android:layout_alignRight="@+id/editText17"
        android:layout_alignTop="@+id/editText17"
        android:layout_toEndOf="@+id/imageView22"
        android:layout_toRightOf="@+id/imageView22"
        android:background="#fff"
        android:hint="Password"
        android:maxLines="1"
        android:inputType="textWebPassword|textPassword"
        android:paddingEnd="5dp"
        android:paddingStart="5dp" />


    <EditText
        android:id="@+id/editText18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText17"
        android:layout_alignLeft="@+id/editText17"
        android:layout_alignRight="@+id/editText17"
        android:layout_alignStart="@+id/editText17"
        android:layout_below="@+id/editText17"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="18dp" />


    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText18"
        android:layout_alignLeft="@+id/editText18"
        android:layout_alignStart="@+id/editText18"
        android:layout_alignTop="@+id/editText18"
        android:background="#E84C3D"
        android:padding="5dp"
        android:src="@drawable/user_role_selector" />


    <Spinner
        android:id="@+id/userRoleSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText18"
        android:layout_alignEnd="@+id/passwordEditText"
        android:layout_alignRight="@+id/passwordEditText"
        android:layout_alignTop="@+id/editText18"
        android:layout_toEndOf="@+id/imageView23"
        android:layout_toRightOf="@+id/imageView23"
        android:background="#fff"
        android:hint="Password"
        android:inputType="textWebPassword|textPassword"
        android:paddingEnd="5dp"
        android:paddingStart="5dp" />

    <ImageView
        android:id="@+id/imageView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginButton"
        android:layout_alignEnd="@+id/userRoleSpinner"
        android:layout_alignRight="@+id/userRoleSpinner"
        android:layout_alignTop="@+id/editText18"
        android:src="@drawable/picklist50" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText18"
        android:layout_alignLeft="@+id/editText18"
        android:layout_alignRight="@+id/editText18"
        android:layout_alignStart="@+id/editText18"
        android:layout_below="@+id/editText18"
        android:layout_marginTop="20dp"
        android:background="#E84C3D"
        android:text="Log In"
        android:textColor="#fff"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/forgotClickText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="2dp"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:text="Forgot password?"
        android:textColor="#fff" />

</RelativeLayout>