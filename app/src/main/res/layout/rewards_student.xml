<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:orientation="vertical">

    <View
        android:id="@+id/view62"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:background="#000" />

    <View
        android:id="@+id/view35"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/view62"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rewards_panel_bg" />

    <TextView
        android:id="@+id/extracurricularTextView"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_below="@+id/view35"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#2880B8"
        android:gravity="center"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="Extra-curr."
        android:textColor="#fff" />

    <TextView
        android:id="@+id/academicsTextView"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/extracurricularTextView"
        android:layout_alignTop="@+id/extracurricularTextView"
        android:layout_toLeftOf="@+id/extracurricularTextView"
        android:layout_toStartOf="@+id/extracurricularTextView"
        android:background="@drawable/rewards_panel_left_clear"
        android:gravity="center"
        android:text="Academics"
        android:textColor="#2880B8" />

    <TextView
        android:id="@+id/sportsTextView"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/extracurricularTextView"
        android:layout_alignTop="@+id/extracurricularTextView"
        android:layout_toEndOf="@+id/extracurricularTextView"
        android:layout_toRightOf="@+id/extracurricularTextView"
        android:background="@drawable/rewards_panel_right_clear"
        android:gravity="center"
        android:text="Sports"
        android:textColor="#2880B8" />

    <View
        android:id="@+id/view63"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/extracurricularTextView" />


    <ListView
        android:id="@+id/rewardslistView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view63"
        android:layout_centerHorizontal="true"
        android:dividerHeight="0dp" />

    <ImageView
        android:id="@+id/userPicImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/rewardsStudentName"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/rewardstrophy100" />

    <TextView
        android:id="@+id/rewardsStudentName"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/view35"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:ellipsize="end"
        android:gravity="bottom"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="Ajinkya Gaurkar"
        android:textColor="#fff"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/noDataAvailabletextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view63"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        style="@android:style/TextAppearance.Medium"
        android:text="@string/noDataAvailable"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold|italic" />


    <RelativeLayout
        android:id="@+id/teacherRewardsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_bg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:id="@+id/rewardsSnackView"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <View
            android:id="@+id/view34"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <View
            android:id="@+id/view54"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_centerVertical="true" />

        <Spinner
            android:id="@+id/rewardsStudentNamespinner"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rewardsClassSpinner"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/user_profile_fields_bg" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rewardsStudentNamespinner"
            android:layout_alignEnd="@+id/rewardsStudentNamespinner"
            android:layout_alignRight="@+id/rewardsStudentNamespinner"
            android:layout_alignTop="@+id/rewardsStudentNamespinner"
            android:src="@drawable/picklist50" />

        <Button
            android:id="@+id/rewardsViewButton"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@+id/rewardsStudentNamespinner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/mark_attendance_new_btn"
            android:gravity="center"
            android:text="View"
            android:textColor="#fff"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/rewardsClassSpinner"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/rewardsStudentNamespinner"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/rewardsStudentNamespinner"
            android:layout_marginTop="25dp"
            android:layout_toLeftOf="@+id/view34"
            android:layout_toStartOf="@+id/view34"
            android:background="@drawable/user_profile_fields_bg" />

        <Spinner
            android:id="@+id/rewardsDivisionSpinner"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/rewardsStudentNamespinner"
            android:layout_alignRight="@+id/rewardsStudentNamespinner"
            android:layout_alignTop="@+id/rewardsClassSpinner"
            android:layout_toRightOf="@+id/view34"
            android:background="@drawable/user_profile_fields_bg" />

        <ImageView
            android:id="@+id/imageView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rewardsClassSpinner"
            android:layout_alignTop="@+id/rewardsClassSpinner"
            android:layout_toLeftOf="@+id/view34"
            android:layout_toStartOf="@+id/view34"
            android:src="@drawable/picklist50" />

        <ImageView
            android:id="@+id/imageView43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rewardsDivisionSpinner"
            android:layout_alignEnd="@+id/rewardsStudentNamespinner"
            android:layout_alignRight="@+id/rewardsStudentNamespinner"
            android:layout_alignTop="@+id/rewardsDivisionSpinner"
            android:src="@drawable/picklist50" />

    </RelativeLayout>

</RelativeLayout>

