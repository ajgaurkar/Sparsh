<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:padding="8dp">

    <TextView
        android:id="@+id/calendarDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textSize="18sp"
        android:text="" />

    <TextView
        android:id="@+id/calendarTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/calendarDateTextView"
        android:layout_toRightOf="@+id/calendarDateTextView"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:padding="5dp"
        android:text=""
        android:textStyle="bold" />

    <TextView
        android:id="@+id/calendarTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/calendarDateTextView"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:text=""
        android:textSize="16sp" />

</RelativeLayout>