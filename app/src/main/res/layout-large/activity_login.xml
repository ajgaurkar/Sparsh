<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rewards_panel_bg"
    android:orientation="vertical"
    android:padding="10dip">

    <View
        android:id="@+id/view57"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <View
        android:id="@+id/rootview"
        android:layout_width="4dp"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editText15"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:singleLine="true"
        android:textSize="18sp"
        android:layout_alignEnd="@+id/view57"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/view57"
        android:layout_alignTop="@+id/view57"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText15"
        android:layout_alignLeft="@+id/editText15"
        android:layout_alignStart="@+id/editText15"
        android:layout_alignTop="@+id/view57"
        android:background="#E84C3D"
        android:padding="2dp"
        android:src="@drawable/loginuser100" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText15"
        android:layout_alignEnd="@+id/editText15"
        android:layout_alignRight="@+id/editText15"
        android:layout_alignTop="@+id/view57"
        android:layout_toEndOf="@+id/imageView22"
        android:layout_toRightOf="@+id/imageView22"
        android:background="#fff"
        android:hint="User name"
        android:maxLines="1"
        android:textSize="18sp"
        android:singleLine="true"
        android:paddingEnd="10dp"
        android:paddingStart="10dp" />

    <EditText
        android:id="@+id/editText17"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:singleLine="true"
        android:textSize="18sp"
        android:layout_alignEnd="@+id/editText15"
        android:layout_alignLeft="@+id/editText15"
        android:layout_alignRight="@+id/editText15"
        android:layout_alignStart="@+id/editText15"
        android:layout_below="@+id/editText15"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:singleLine="true"
        android:layout_alignBottom="@+id/editText17"
        android:layout_alignEnd="@+id/editText17"
        android:layout_alignRight="@+id/editText17"
        android:layout_alignTop="@+id/editText17"
        android:layout_toEndOf="@+id/imageView22"
        android:layout_toRightOf="@+id/imageView22"
        android:background="#fff"
        android:hint="Password"
        android:textSize="18sp"
        android:inputType="textWebPassword|textPassword"
        android:paddingEnd="10dp"
        android:paddingStart="10dp" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText17"
        android:layout_alignLeft="@+id/editText17"
        android:layout_alignStart="@+id/editText17"
        android:layout_alignTop="@+id/editText17"
        android:layout_toLeftOf="@+id/passwordEditText"
        android:layout_toStartOf="@+id/passwordEditText"
        android:background="#E84C3D"
        android:padding="5dp"
        android:src="@drawable/loginkey100" />

    <EditText
        android:id="@+id/editText18"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textSize="18sp"
        android:layout_alignEnd="@+id/editText17"
        android:layout_alignLeft="@+id/editText17"
        android:layout_alignRight="@+id/editText17"
        android:layout_alignStart="@+id/editText17"
        android:layout_below="@+id/editText17"
        android:layout_marginTop="30dp" />

    <Spinner
        android:id="@+id/userRoleSpinner"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/editText18"
        android:layout_alignEnd="@+id/editText18"
        android:layout_alignLeft="@+id/passwordEditText"
        android:layout_alignRight="@+id/editText18"
        android:layout_alignStart="@+id/passwordEditText"
        android:layout_alignTop="@+id/editText18"
        android:background="#fff"
        android:textSize="18sp"
        android:inputType="textWebPassword|textPassword"
        android:paddingEnd="10dp"
        android:paddingStart="10dp" />

    <ImageView
        android:id="@+id/imageView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText18"
        android:layout_alignEnd="@+id/editText18"
        android:layout_alignRight="@+id/editText18"
        android:layout_alignTop="@+id/editText18"
        android:src="@drawable/picklist50" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText18"
        android:layout_alignTop="@+id/editText18"
        android:layout_toLeftOf="@+id/passwordEditText"
        android:layout_toStartOf="@+id/passwordEditText"
        android:background="#E84C3D"
        android:padding="5dp"
        android:src="@drawable/user_role_selector" />

    <TextView
        android:id="@+id/forgotClickText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="2dp"
        android:paddingStart="10dp"
        android:text="Forgot password?"
        android:textColor="#fff"
        android:paddingLeft="10dp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText18"
        android:layout_alignLeft="@+id/editText18"
        android:layout_alignRight="@+id/editText18"
        android:layout_alignStart="@+id/editText18"
        android:layout_below="@+id/editText18"
        android:layout_marginTop="40dp"
        android:background="#E84C3D"
        android:text="Log In"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view57"
        android:padding="25dp"
        android:layout_alignTop="@+id/rootview"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sparsh_logo" />

</RelativeLayout>
