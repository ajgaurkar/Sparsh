<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <View
        android:id="@+id/view50"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/view51"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_centerVertical="true" />

    <Spinner
        android:id="@+id/attendanceDivisionpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/attendanceClassspinner"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/view50"
        android:layout_toRightOf="@+id/view50"
        android:background="@drawable/user_profile_fields_bg" />

    <Spinner
        android:id="@+id/attendanceClassspinner"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:layout_toLeftOf="@+id/view50"
        android:background="@drawable/user_profile_fields_bg" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/attendanceDivisionpinner"
        android:layout_alignEnd="@+id/attendanceDivisionpinner"
        android:layout_alignRight="@+id/attendanceDivisionpinner"
        android:layout_alignTop="@+id/attendanceDivisionpinner"
        android:src="@drawable/picklist50" />


    <Button
        android:id="@+id/attendanceReviewButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/view51"
        android:layout_marginBottom="70dp"
        android:layout_toLeftOf="@+id/imageView4"
        android:layout_toStartOf="@+id/imageView4"
        android:background="@drawable/mark_attendance_new_btn"
        android:gravity="center"
        android:shadowColor="#7F000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:text="Review"
        android:textColor="#FBFBFB"
        android:textStyle="bold" />


    <Button
        android:id="@+id/attendanceMarkButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/view51"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/view50"
        android:layout_toRightOf="@+id/view50"
        android:background="@drawable/mark_attendance_new_btn"
        android:gravity="center"
        android:text="Start"
        android:textColor="#fff"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/attendanceClassspinner"
        android:layout_toLeftOf="@+id/view50"
        android:layout_toStartOf="@+id/view50"
        android:src="@drawable/picklist50" />


    <TextView
        android:id="@+id/todayAttendanceTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view51"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="5dp"
        android:text="Attendance for 13-Mar-2016"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold|italic" />


    <TextView
        android:id="@+id/todayAttendanceStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/todayAttendanceTitleTextView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/attendance_main_status_bg"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingEnd="50dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingStart="50dp"
        android:paddingTop="5dp"
        android:shadowColor="#7f000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:text="Marked"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/draftTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/todayAttendanceStatusTextView"
        android:background="@color/colorPrimaryDark"
        android:padding="5dp"
        android:text=" Drafts"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <ListView
        android:id="@+id/attendanceDraftListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/draftTitleTextView"
        android:divider="#00ffffff"
        android:dividerHeight="5dp" />

</RelativeLayout>