<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_event_Title"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rewards_list_item_title"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="35dp"
        android:paddingStart="15dp"
        android:text="100 meters sprint race"
        android:textColor="#24999A"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view36"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignEnd="@+id/txt_event_Title"
        android:layout_alignStart="@+id/txt_event_Title"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:background="#2880B8" />

    <TextView
        android:id="@+id/txt_Body"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/txt_event_Title"
        android:layout_alignStart="@+id/txt_event_Title"
        android:layout_below="@+id/txt_event_Title"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rewards_list_item_body"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#222222"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_Body"
        android:layout_alignEnd="@+id/txt_Body"
        android:layout_alignTop="@+id/rewards_rating_bar"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="28 Sep"
        android:textColor="#24999A"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/txt_Body"
        android:layout_alignEnd="@+id/txt_event_Title"
        android:layout_alignTop="@+id/txt_event_Title"
        android:layout_marginEnd="10dp"
        android:padding="5dp"
        android:src="@drawable/info_blue50" />

    <RatingBar
        android:id="@+id/rewards_rating_bar"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_Body"
        android:layout_alignStart="@+id/txt_event_Title"
        android:layout_marginStart="-15dp"
        android:isIndicator="true"
        android:max="5"
        android:numStars="5"
        android:rating="3"
        android:scaleX=".7"
        android:scaleY=".7"
        android:stepSize="1.0" />


    <!--android:progressTint="@android:color/holo_red_dark"-->
    <!--android:progressBackgroundTint="@android:color/holo_red_dark"-->
    <!--android:secondaryProgressTint="@android:color/holo_red_dark"-->
    <!--android:transformPivotX="0dp"-->
    <!--android:transformPivotY="0dp"-->
    <!--android:scaleX=".5"-->
    <!--android:scaleY=".5"-->
    <!--android:progressDrawable="@drawable/ratingbarstars"-->
</RelativeLayout>
