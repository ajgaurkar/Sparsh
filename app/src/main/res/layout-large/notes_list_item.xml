<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="#EFEFEF"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="5dp">

    <View
        android:id="@+id/view42"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/view37"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_ui_background" />

    <View
        android:id="@+id/view41"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/view37"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/view37"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="1dp"
        android:background="@drawable/card_ui_foreground"
        android:layout_alignRight="@+id/view37"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/notesTagTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view43"
        android:layout_alignTop="@+id/view37"
        android:gravity="center_vertical"
        android:paddingEnd="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:paddingStart="10dp"
        android:text="Feedback"
        android:textColor="#404040"
        android:textSize="18sp"
        android:textStyle="italic|bold" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/view43"
        android:layout_alignEnd="@+id/notesTagTextView"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="#8f8f8f"
        android:layout_alignRight="@+id/notesTagTextView" />

    <TextView
        android:id="@+id/notesPostDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view41"
        android:layout_alignStart="@+id/view41"
        android:paddingBottom="3dp"
        android:paddingEnd="5dp"
        android:paddingStart="10dp"
        android:paddingTop="3dp"
        android:textSize="18sp"
        android:text="10 Oct 7:15 AM"
        android:textColor="#404040"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/view41"
        android:paddingRight="5dp"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/notesStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/view41"
        android:layout_alignParentBottom="true"
        android:paddingBottom="3dp"
        android:paddingEnd="10dp"
        android:paddingStart="3dp"
        android:paddingTop="3dp"
        android:text="Replied"
        android:textSize="18sp"
        android:textStyle="italic|bold"
        android:layout_alignRight="@+id/view41"
        android:paddingLeft="3dp"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/concernedPersonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/view41"
        android:layout_alignTop="@+id/view37"
        android:layout_toEndOf="@+id/notesTagTextView"
        android:ellipsize="end"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:paddingBottom="4dp"
        android:paddingEnd="10dp"
        android:paddingLeft="4dp"
        android:paddingStart="4dp"
        android:paddingTop="3dp"
        android:text="Amey Bawiskar "
        android:textColor="#F06103"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignRight="@+id/view41"
        android:layout_toRightOf="@+id/notesTagTextView"
        android:paddingRight="10dp" />

    <View
        android:id="@+id/view43"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/concernedPersonTextView"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="#8f8f8f"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/notesNoteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/view41"
        android:layout_alignStart="@+id/view41"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView59"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="we need to meet class teacher we need to meet class teacher we need to meet class teacher we need to meet class teacher "
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignRight="@+id/view41"
        android:layout_alignLeft="@+id/view41"
        android:layout_toRightOf="@+id/textView59" />

</RelativeLayout>