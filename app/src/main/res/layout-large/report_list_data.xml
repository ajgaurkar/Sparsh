<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/exam"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|start"
        android:paddingStart="15dp"
        android:text="Hindi"
        android:textSize="18sp"
        android:textColor="#414141"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:paddingLeft="15dp" />

    <View
        android:id="@+id/view32"
        android:layout_width="1dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/exam"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/exam"
        android:layout_toRightOf="@+id/exam" />


    <TextView
        android:id="@+id/marks"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/view32"
        android:gravity="center"
        android:text="100"
        android:textSize="18sp"
        android:textColor="#414141"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/view32" />

    <View
        android:id="@+id/view33"
        android:layout_width="1dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/view32"
        android:layout_alignTop="@+id/view32"
        android:layout_toEndOf="@+id/marks"
        android:layout_toRightOf="@+id/marks" />

    <TextView
        android:id="@+id/grades"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignBaseline="@+id/marks"
        android:layout_alignBottom="@+id/marks"
        android:layout_toEndOf="@+id/view33"
        android:gravity="center"
        android:text="A"
        android:textSize="18sp"
        android:textColor="#414141"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/view33" />
</RelativeLayout>