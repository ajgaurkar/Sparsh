<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg">

    <View
        android:id="@+id/view41"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <View
        android:id="@+id/view37"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />


    <TextView
        android:id="@+id/notesApproveCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/user_profile_fields_bg"
        android:padding="10dp"
        android:text="General Query"
        android:textColor="#004b96"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/notesApproveScheduleMeetTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/notesApproveCategory"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/notesApproveCategory"
        android:layout_toRightOf="@+id/notesApproveCategory"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:text="Requested Schedule                                                                        28-12-2015 12:45 PM"
        android:textStyle="bold"
        android:visibility="visible" />


    <TextView
        android:id="@+id/notesApproveDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view37"
        android:layout_alignLeft="@+id/notesApproveCategory"
        android:layout_alignStart="@+id/notesApproveCategory"
        android:layout_below="@+id/notesApproveScheduleMeetTextView"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/user_profile_fields_bg"
        android:hint="Description"
        android:padding="10dp"
        android:scrollHorizontally="true"
        android:textSize="18sp"
        android:layout_alignRight="@+id/notesApproveScheduleMeetTextView"
        android:layout_alignEnd="@+id/notesApproveScheduleMeetTextView" />

    <EditText
        android:id="@+id/notesApproveReplyEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/notesApproveReplyButton"
        android:layout_alignEnd="@+id/replyHeaderTextView1"
        android:layout_alignLeft="@+id/replyHeaderTextView1"
        android:layout_alignRight="@+id/replyHeaderTextView1"
        android:layout_alignStart="@+id/replyHeaderTextView1"
        android:layout_below="@+id/replyHeaderTextView1"
        android:background="@drawable/user_profile_fields_bg"
        android:gravity="start"
        android:padding="5dp"
        android:paddingTop="35dp"
        android:scrollHorizontally="true"
        android:text="" />


    <TextView
        android:id="@+id/replyHeaderTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/notesApproveDescriptionTextView"
        android:layout_alignLeft="@+id/notesApproveDescriptionTextView"
        android:layout_alignRight="@+id/notesApproveDescriptionTextView"
        android:layout_alignStart="@+id/notesApproveDescriptionTextView"
        android:layout_below="@+id/view37"
        android:background="@drawable/title_bg_grey"
        android:gravity="center"
        android:padding="10dp"
        android:text="Reply"
        android:textSize="18sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/notesApproveReplyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/notesApproveReplyEditText"
        android:layout_alignLeft="@+id/notesApproveReplyEditText"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/notesApproveReplyEditText"
        android:layout_alignStart="@+id/notesApproveReplyEditText"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="Reply"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/notesApproveMeetingDenyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/notesApproveReplyButton"
        android:layout_alignLeft="@+id/notesApproveReplyButton"
        android:layout_alignStart="@+id/notesApproveReplyButton"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/view41"
        android:layout_toStartOf="@+id/view41"
        android:background="#929393"
        android:padding="10dp"
        android:text="Deny"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/notesApproveMeetingApproveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/notesApproveReplyButton"
        android:layout_alignEnd="@+id/notesApproveReplyButton"
        android:layout_alignRight="@+id/notesApproveReplyButton"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/view41"
        android:layout_toRightOf="@+id/view41"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:text="Approve"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold" />


</RelativeLayout>